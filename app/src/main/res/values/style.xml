<resources>
    <!-- Main App Theme -->
    <style name="Theme.FoodCarbCalculator" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <!-- Splash Screen Theme -->
    <!-- Splash Screen Theme for Android 12+ -->
    <style name="Theme.FoodCarbCalculator.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash_logo</item>
        <item name="postSplashScreenTheme">@style/Theme.FoodCarbCalculator</item>
    </style>
</resources>



