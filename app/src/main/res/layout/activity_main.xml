<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- EditText for genre input -->
    <EditText
        android:id="@+id/genreEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter genre (e.g., fantasy, mystery)"
        app:layout_constraintBottom_toTopOf="@id/generateStoryButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="16dp"
        android:textSize="18sp"/>

    <!-- Button to trigger story generation -->
    <Button
        android:id="@+id/generateStoryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate Story"
        app:layout_constraintBottom_toTopOf="@id/storyTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/genreEditText"
        android:padding="12dp"/>

    <!-- ScrollView to make the story text scrollable -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/generateStoryButton">

        <!-- TextView to display the generated story -->
        <TextView
            android:id="@+id/storyTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generated story will appear here"
            android:padding="16dp"
            android:textSize="16sp"/>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
